@model FilmLister.WebUI.Models.FilmListTemplate

@{
    ViewData["Title"] = "Film Lister - Add to a List";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>Create a Film List</h1>

<div class="row">
    <div class="col-md">
        Create a film list be searching titles and pressing Add. You can add a many films as you'd like.
    </div>
</div>
<div class="row">
    @foreach (var film in Model.Films)
    {
        <figure class="mini-poster">
            <img width="100" src="@film.ImageUrl" />
            <figcaption>
                @film.Name
            </figcaption>
        </figure>
    }
</div>
<div class="row">
    <div class="col-md-3">
        <img id="selectedFilmImg" width="250" />
    </div>
    <div class="col-md-4">
        <form id="filmForm" method="post" action="/FilmListTemplate/AddFilm">
            <input type="hidden" name="filmListTemplateId" value="@Model.Id" />
            <div class="form-group">
                <input id="tmdbId" class="form-control" type="hidden" name="tmdbId" />
            </div>
            <div class="form-group">
                <label class="control-label">Film Name</label>
                <input id="filmSearch" class="form-control" type="text" />
            </div>
            <div class="form-group">
                <input id="submitButton" type="submit" value="Add" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>
<div class="row">
    <div class="col-md">
        <a asp-controller="FilmList" asp-action="Create" asp-route-listId="@Model.Id">Sort the list</a>
    </div>
</div>
